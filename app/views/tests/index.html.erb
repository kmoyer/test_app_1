<div class="page-header">
  <h1>
    Tests
    <a href="/tests/new" class="btn btn-lg btn-success">New Test</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @tests.each do |test| %>
      <tr>
        <td>
          <a href="/tests/<%= test.id %>" class="btn btn-primary">Show</a>
          <a href="/tests/<%= test.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_test/<%= test.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
